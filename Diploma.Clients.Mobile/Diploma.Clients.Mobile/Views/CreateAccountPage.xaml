<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Diploma.Clients.Mobile.Views.CreateAccountPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="LoginEntry" Placeholder = "Login" />
            <Entry x:Name="PasswordEntry"  Placeholder = "Password" IsPassword ="True" />
            
            
            
            <Button x:Name="RecordVoice" 
                    Text="RecordVoice"
                    Clicked="RecordVoice_Clicked"
                    VerticalOptions="End"
                     HorizontalOptions="CenterAndExpand" />
            
            <Button x:Name="AuthorizeButton" 
                    Text="Authorize"
                    Clicked="AuthorizeButton_Clicked"
                    VerticalOptions="End"
                     HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>